// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  student
  teacher
  hod
  admin
}

enum EventStatus {
  upcoming
  ongoing
  completed
  cancelled
}

enum SkillType {
  offer
  request
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  name          String
  role          UserRole  @default(student)
  departmentId  String?
  isEmailVerified Boolean @default(false)
  emailVerificationToken String?
  passwordResetToken String?
  passwordResetExpires DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  department    Department? @relation(fields: [departmentId], references: [id], onDelete: SetNull)
  announcements Announcement[]
  notes         Note[]
  events        Event[]
  eventRegistrations EventRegistration[]
  skillExchanges SkillExchange[]
  enrollments   Enrollment[]

  @@index([email])
  @@index([role])
  @@index([departmentId])
}

model Department {
  id          String   @id @default(uuid())
  name        String   @unique
  code        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users       User[]
  enrollments Enrollment[]

  @@index([code])
}

model Announcement {
  id          String   @id @default(uuid())
  title       String
  content     String
  authorId    String
  isPinned    Boolean  @default(false)
  targetRole  UserRole?
  departmentId String?
  expiresAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@index([isPinned])
  @@index([targetRole])
  @@index([departmentId])
  @@index([createdAt])
}

model Note {
  id          String   @id @default(uuid())
  title       String
  description String?
  fileUrl     String
  subject     String
  semester    Int
  authorId    String
  departmentId String?
  downloadCount Int    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@index([subject])
  @@index([semester])
  @@index([departmentId])
  @@index([createdAt])
}

model Event {
  id          String      @id @default(uuid())
  title       String
  description String
  date        DateTime
  location    String?
  organizerId String
  departmentId String?
  status      EventStatus @default(upcoming)
  maxAttendees Int?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  organizer   User        @relation(fields: [organizerId], references: [id], onDelete: Cascade)
  registrations EventRegistration[]

  @@index([organizerId])
  @@index([date])
  @@index([status])
  @@index([departmentId])
}

model EventRegistration {
  id          String   @id @default(uuid())
  eventId     String
  userId      String
  attended    Boolean  @default(false)
  registeredAt DateTime @default(now())

  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
}

model SkillExchange {
  id          String    @id @default(uuid())
  title       String
  description String
  type        SkillType
  authorId    String
  tags        String[]
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  author      User      @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@index([type])
  @@index([isActive])
  @@index([createdAt])
}

model Enrollment {
  id          String   @id @default(uuid())
  userId      String
  departmentId String
  semester    Int
  year        Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  department  Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@unique([userId, departmentId, semester, year])
  @@index([userId])
  @@index([departmentId])
}

